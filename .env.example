# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your-secret-key-min-32-characters

# Enemy IDs (comma separated)
ENEMY=12345,67890,11111

# Server Port
PORT=3000

CONNECTION_POOL_SIZE=2

# Page timeout in milliseconds (default: 60000)
PAGE_TIMEOUT=15000

# Idle sleep timeout in milliseconds when no links to check (default: 600000 = 10 minutes)
IDLE_SLEEP_TIMEOUT=180000

# Google Sheets Integration
# Enable/disable Google Sheets worker
SHEET_UPDATE=true

# Google Sheets URL
SHEET_URL=https://docs.google.com/spreadsheets/d/aaaaaaaaaaaaa

# Google Sheets range (default: A:B means columns A=url, B=date)
SHEET_RANGE=A:B

# Google Service Account credentials (required for private sheets)
# Create a service account at https://console.cloud.google.com/iam-admin/serviceaccounts
# Enable Google Sheets API at https://console.cloud.google.com/apis/library/sheets.googleapis.com
# Share your Google Sheet with the service account email
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Private key from service account JSON (replace \n with \\n)
# Download JSON key file and copy the "private_key" field value
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----\n"

# Google Sheets worker interval in milliseconds (default: 300000 = 5 minutes)
SHEET_SYNC_INTERVAL=300000