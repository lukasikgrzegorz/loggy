# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your-secret-key-min-32-characters

# Enemy IDs (comma separated)
ENEMY=12345,67890,11111

# Server Port
PORT=3000

CONNECTION_POOL_SIZE=2

# Page timeout in milliseconds (default: 60000)
PAGE_TIMEOUT=15000

# Idle sleep timeout in milliseconds when no links to check (default: 600000 = 10 minutes)
IDLE_SLEEP_TIMEOUT=180000